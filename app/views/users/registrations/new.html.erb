


  <div class="ui form">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <div class="fields">
    <div class="ui three middle stackable aligned column grid">
    <div class="row">
      <div class="field column"></div>

      <div class = "field column">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true, autofocus: true %>
        <%= f.input :password_confirmation, required: true, autofocus: true %>
      </div>

      <div class="field column"></div>
    </div>

    </div>
    <div class="ui blue submit">
        <%= f.button :submit, "Sign Up" %>
    </div>
  </div>
  <% end %>
</div>
<p>Already have an account?</p>
  <%= render "users/shared/links" %>




